                    <validationInterval>30000</validationInterval>
                    <defaultAutoCommit>false</defaultAutoCommit>
                    <databaseProps>
                        <property name="SetFloatAndDoubleUseBinary">true</property>
                    </databaseProps>
                </configuration>
            </definition>
        </datasource>
        
        <datasource>
            <name>WSO2AM_DB</name>
            <description>The datasource used for API Manager database</description>
            <jndiConfig>
                <name>jdbc/WSO2AM_DB</name>
            </jndiConfig>
            <definition type="RDBMS">
                <configuration>
                    <url>{{WSO2UM_DB_JDBC_URL}}</url>
                    <username>{{WSO2UM_DB_USERNAME}}</username>
                    <password>{{WSO2UM_DB_PASSWORD}}</password>
                    <driverClassName>{{WSO2UM_DB_JDBC_DRIVER_CLASS_NAME}}</driverClassName>
                    <maxActive>{{DB_MAX_ACTIVE}}</maxActive>
                    <maxWait>60000</maxWait>
